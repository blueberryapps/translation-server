
h1 Listing releases
= link_to 'New Release', [:new, :release], class: 'btn btn-primary'

table.table
  thead
    tr
      th Locale
      th Version
      th Created at
      th Actions
      th Download

  tbody
    - @releases.each do |release|
      tr
        td = release.locale
        td = release.version
        td = localize release.created_at
        td 
          =<> link_to 'Show', release, class: 'btn btn-primary'
          =<> link_to 'Destroy', release, data: { :confirm => 'Are you sure?' }, :method => :delete, class: 'btn btn-danger'
        td 
          =<> link_to 'YML', [release, format: :yml], class: 'btn btn-info'
          =<> link_to 'CSV', [release, format: :csv], class: 'btn btn-info'

= paginate @releases, theme: 'twitter-bootstrap-3'
